{
    "private": true,
    "workspaces": [
        "packages/core",
        "packages/controllers",
        "packages/debug-draw",
        "packages/particles",
        "packages/lights",
        "packages/testbed",
        "packages/benchmark",
        "packages/benchmark-web",
        "packages/updiff"
    ],
    "scripts": {
        "bench": "npm start -w @box2d/benchmark",
        "bench:web": "npm start -w @box2d/benchmark-web",
        "build": "npm run build --workspaces --if-present",
        "build:docs": "vuepress build packages/documentation -d docs/docs",
        "build:libs": "npm run build -w @box2d/core -w @box2d/controllers -w @box2d/particles -w @box2d/lights -w @box2d/debug-draw -w @box2d/benchmark",
        "build:testbed": "npm run build -w @box2d/testbed",
        "docs:build": "npm run docs:build:base -- build",
        "docs:build:base": "rimraf docs-dist && mono-docs .",
        "docs:dev": "nodemon --ignore \"docs-dist\" --ignore node_modules --ignore dist -e ts,tsx,md,scss,png,webp --exec \"npm run docs:build:base -- serve\"",
        "credit": "all-contributors add",
        "lint": "mono-lint",
        "lint:fix": "mono-lint --fix",
        "release": "mono-release",
        "start": "npm start -w @box2d/testbed",
        "start:docs": "vuepress dev packages/documentation",
        "updiff": "npm start -w @box2d/updiff",
        "updiff:cpp": "npm run convert:cpp -w @box2d/updiff",
        "updiff:ts": "npm run convert:ts -w @box2d/updiff"
    },
    "devDependencies": {
        "@lusito/eslint-config-react": "^2.3.0",
        "@lusito/mono": "^0.12.0",
        "@lusito/mono-docs": "^0.13.0",
        "@lusito/prettier-config": "^2.3.1",
        "@lusito/stylelint-config": "^2.3.0",
        "@types/rimraf": "^3.0.2",
        "all-contributors-cli": "^6.24.0",
        "nodemon": "^2.0.20",
        "rimraf": "^4.1.1",
        "sort-package-json": "^2.1.0",
        "typescript": "^4.9.4"
    }
}
